<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Only allow HTTPS connections to specific domains -->
        <domain includeSubdomains="true">dictionary-api.eliaschen.dev</domain>
        <domain includeSubdomains="true">api.dictionaryapi.dev</domain>
    </domain-config>
    
    <!-- Disable debug overrides in production -->
    <debug-overrides>
        <trust-anchors>
            <!-- Allow self-signed certificates only in debug builds -->
        </trust-anchors>
    </debug-overrides>
</network-security-config>
